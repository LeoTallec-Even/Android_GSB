<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="514dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:text="Application de gestion des échantillons de compléments alimentaire"
            android:textSize="27dp" />

        <Button
            android:id="@+id/btn_ajouter_echantillon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter Échantillon" />

        <Button
            android:id="@+id/btn_liste_echantillon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liste Des Échantillons" />

        <Button
            android:id="@+id/btn_maj_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maj Stock" />

        <Button
            android:id="@+id/btn_mvt_ajout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mouvement Ajout" />

        <Button
            android:id="@+id/btn_mvt_retirer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mouvement Suppression" />

        <Button
            android:id="@+id/Quitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quitter" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>